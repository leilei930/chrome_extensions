{
  "manifest_version": 2,
  "name": "SmartPlay Auto Login",
  "version": "1.0",
  "description": "Automatically logs in to SmartPlay",
  "permissions": [
    "activeTab",
    "https://www.smartplay.lcsd.gov.hk/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.smartplay.lcsd.gov.hk/*"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}

